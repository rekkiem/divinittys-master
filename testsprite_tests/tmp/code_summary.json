        "src/lib/auth.ts",
        "src/middleware.ts",
        "src/components/providers/SessionProvider.tsx"
      ]
    },
    {
      "name": "Product Catalog",
      "description": "Browse products with filtering by category, brand, price range and sorting options",
      "files": [
        "src/app/(shop)/products/page.tsx",
        "src/app/(shop)/products/[id]/page.tsx",
        "src/components/products/ProductCard.tsx",
        "src/components/products/ProductGrid.tsx",
        "src/components/products/ProductGallery.tsx",
        "src/components/products/FilterSidebar.tsx",
